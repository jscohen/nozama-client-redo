{{#each products as |product|}}
<div class="card-wrapper col-md-3 col-sm-6">
  <div class="card">
  <div class="image-wrapper">
    {{#if product.image}}
      <img src="{{product.image}}" alt="" class="image" />
      {{else}}
      <img src="http://placehold.it/800x500" alt="" class="image" />
      {{/if}}
  </div>
  <div class="content-wrapper">
    <div class="title">
      <h3 data-id="{{product._id}}">{{product.name}}</h3>
    </div>
    <div class="price">
      {{decimal product.price}}
    </div>
    <div class="description">
      {{product.description}}
      {{product.brand}}
      {{product.category}}
    </div>
    <div class="actions">
      <form id="{{product._id}}">
      <input id="cart" type="submit" class="button flip green-solid cart browse-products" value="Add to Cart">
      </form>
    </div>
  </div>
</div>
</div>
{{/each}}
